<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".menu_activities.DeviceInformation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/vollkornregular"
            android:gravity="center"
            android:text="Device Hardware and Software Information"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/versionRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/versionInc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/versionSdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hardware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/vollkornregular"
                android:gravity="center_vertical"
                android:text="Test"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>